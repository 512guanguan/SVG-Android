<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.android.svg.support.extend.SVGTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableBottom="@drawable/ic_android_red"
        android:drawableLeft="@drawable/ic_android_red"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_android_red"
        android:drawableTop="@drawable/ic_android_red"
        android:text="TextView"
        android:gravity="center"
        android:background="@drawable/shape_rect_border"
        svg:svgAlpha="0.5"/>

    <com.android.svg.support.extend.SVGTextView
        android:id="@+id/extend_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableBottom="@drawable/ic_android_red"
        android:drawableLeft="@drawable/ic_android_red"
        android:drawablePadding="10dip"
        android:layout_marginTop="50dip"
        android:drawableRight="@drawable/ic_android_red"
        android:drawableTop="@drawable/ic_android_red"
        android:text="TextView"
        android:gravity="center"
        android:background="@drawable/shape_rect_border" />

</LinearLayout>